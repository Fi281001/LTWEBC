@model _19T1021292.DomainModels.Category
@{

}

<div class="box box-primary">

    <div class="box-body">
        <form action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>tên loại hàng</label>
                <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control">
            </div>
            <div class="form-group">
                <label>Miêu tả</label>
                <input type="text" name="Description" value="@Model.Description" class="form-control">
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>

</div>



